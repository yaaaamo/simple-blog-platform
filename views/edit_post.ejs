<!-- views/edit.ejs -->
<link rel="stylesheet" href="/css/create.css">
<div class="container">
    <h1>Modify Post</h1>
    <form action="/edit_postt/<%= post.postId %>" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" required><br>
        <label for="content">Content:</label>
        <textarea name="content" id="content" required><%= post.content %></textarea><br>
        <label for="author">Author:</label>
        <input type="text" name="author" id="author" value="<%= post.author %>" required><br>
        <button type="submit">Update Post</button>
    </form>
    <form action="/posts" method="GET">
        <button type="submit" >Go Back to Posts</button>
    </form>
</div>
